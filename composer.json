{
    "name": "maximantonisin/veles-hide-string",
    "description": "String security/anonymous hide",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxim Antonisin",
            "email": "maxim.antonisin@gmail.com"
        }
    ],
    "keywords" : [
        "hide",
        "hide char",
        "asterisk hide",
        "asterisk replace",
        "replace char",
        "asterisk char",
        "security asterisk",
        "security string replace"
    ],
    "require": {
        "php": "^7.2|^8.0",
        "symfony/twig-bridge": "^3.4 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "MaximAntonisin\\Veles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaximAntonisin\\Tests\\": "tests/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": ["phpunit"]
    }
}
